<li>
    <a href="{{ work.url }}" class="snippet">
        <img src="{{ work.data.image }}" alt="{{ work.data.description }}" class="snippet__image" />
        <div class="snippet__description">
            <h3 class="snippet__title">{{ work.data.title }}</h3>
            <p class="snippet__body">{{ work.data.description }}</p>
            <div class="snippet__services">
                {%- for service in work.data.services -%}
                    <span>{{ service }}</span>
                {%- endfor -%}
            </div>
        </div>
    </a>
</li>